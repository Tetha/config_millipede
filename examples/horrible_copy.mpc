service "demo1" {
    aspect foo {
        write => write-to "/etc/demo1/foo"
        reload => exec "cat /etc/demo1/foo /var/log/demo1/received-foo-$(date)"
    }
}

cli-trigger "*:demo1:foo" {
    source "foo" => read-from "/var/spool/millipede/new_foo"
}

target "localhost:demo1:foo" => handle_locally
