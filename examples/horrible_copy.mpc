service demo1 {
    aspects => {
        foo => {
            receive => write-to "/etc/demo1/foo"
            reload => exec "cat /etc/demo1/foo /var/log/demo1/received-foo-$(date)"
        }
    }
}

cli-trigger "*:demo1:foo" {
    sources => {
        foo => read-from "/var/spool/millipede/new_foo"
    }
}

local-target "localhost:demo1:foo"
